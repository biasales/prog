#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main()
{
    char nome1[10];
    char nome2[10];
    int i;

    printf("Insira seu nome : \n");
    scanf("%[^\n]",nome1);


    for(i=0;i<nome1[i];i++){
        if(i<4){
            printf("Letra %d:   %c \n ",i+1,nome1[i]);
        }
    }




    printf(" \n o nome eh %s \n",nome1);


   return 0;
}
